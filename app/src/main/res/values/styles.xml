<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bottomSheetDescriptionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/bluenight</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="downloadButtonTitileStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/bluenight</item>
    </style>

    <style name="downloadButtonLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/chaingun</item>
    </style>
</resources>
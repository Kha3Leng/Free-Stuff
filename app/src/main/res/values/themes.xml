<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FreeMP3Video" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorSecondary">@color/megamen</item>
        <item name="colorSecondaryVariant">@color/cyanite</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorPrimary">@color/carribean</item>
        <item name="colorPrimaryVariant">@color/meadow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/Theme.BottomSheetDialog</item>
    </style>

    <style name="Theme.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="colorPrimary">@color/carribean</item>
        <item name="colorPrimaryDark">@color/bluenight</item>
        <item name="colorAccent">@color/carribean</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_shape</item>
    </style>

    <style name="SettingTextStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">@color/status</item>
        <item name="android:textColor">@color/status</item>
        <item name="titleTextColor">@color/white</item>
    </style>

</resources>